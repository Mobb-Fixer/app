{
	"name": "webdb",
	"version": "PACKAGE_VERSION",
	"description": "Free and Efficient Database IDE",
	"repository": "https://gitlab.com/web-db/public/",
	"productName": "WebDB",
	"homepage": "https://webdb.app",
	"license": "SEE LICENSE IN https://webdb.app/licence.html",
	"main": "./electron/main.js",
	"type": "module",
	"author": {
		"name": "WebDB",
		"email": "main.webdb@gmail.com"
	},
	"scripts": {
		"dev:electron": "electron-forge start",
		"binaries:linux": "electron-forge make --arch=arm64,x64 --platform=linux",
		"binaries:macos": "electron-forge make --arch=arm64,x64 --platform=darwin",
		"start": "NODE_ENV=production node src/index.js 3>&1 1>&2 2>&3 | tee src/front/logs/error.log",
		"dev:back": "nodemon src/index.js 3>&1 1>&2 2>&3 | tee src/front/logs/error.log",
		"lint": "eslint . --fix",
		"obfuscate": "javascript-obfuscator ./src --exclude=/front/ --options-preset low-obfuscation && cd src && find . -name '*js' -exec bash -c ' mv $0 ${0/\\-obfuscated/}' {} \\; && cd .."
	},
	"config": {
		"forge": {
			"packagerConfig": {
				"icon": "./electron/icon"
			},
			"makers": [
				{
					"name": "@electron-forge/maker-dmg",
					"config": {
						"icon": "electron/icon.icns",
						"background": "./electron/background.png"
					}
				},
				{
					"name": "@electron-forge/maker-deb",
					"config": {
						"options": {
							"maintainer": "WebDB",
							"homepage": "https://webdb.app/",
							"icon": "./electron/icon.png",
							"categories": ["Development"],
							"depends": [
								"gconf2",
								"gconf-service",
								"libnotify4",
								"libxtst6",
								"libnss3",
								"mysql-client",
								"postgresql-client",
								"mongodb-database-tools"
							]
						}
					}
				}
			]
		}
	},
	"dependencies": {
		"@sentry/node": "latest",
		"axios": "latest",
		"cors": "latest",
		"dotenv": "latest",
		"express": "latest",
		"javascript-obfuscator": "latest",
		"mongodb": "latest",
		"multer": "latest",
		"mysql2": "latest",
		"node-port-scanner": "latest",
		"pg": "latest",
		"software-license-key": "latest",
		"ssh2": "latest",
		"tunnel-ssh": "latest"
	},
	"devDependencies": {
		"electron-nightly": "latest",
		"@electron-forge/cli": "^6.4.2",
		"@electron-forge/maker-deb": "^6.4.2",
		"@electron-forge/maker-dmg": "^6.4.2"
	},
	"optionalDependencies": {
		"eslint": "latest",
		"nodemon": "latest"
	}
}
